<h4>
    CREATE HOTEL
</h4>
<form action="<%= hotels_path %>" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Name</label>
        <input required type="text" class="form-control" name="hotel[name]" aria-describedby="emailHelp">
        </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Address</label>
        <input required type="text" class="form-control" name="hotel[address]">
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Rating</label>
        <input required type="number" class="form-control" name="hotel[rating]">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
